<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyTanks.MyTanksNew">


    <EditText
        android:id="@+id/textView_tank_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_margin="10dp"
        android:hint="Enter date" />

    <EditText
        android:id="@+id/textView_tank_add_mileage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="numberSigned"
        android:hint="Enter car mileage" />

    <EditText
        android:id="@+id/textView_tank_add_cost_liter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_margin="10dp"
        android:hint="Enter cost per liter" />

    <EditText
        android:id="@+id/textView_tank_add_cost_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="numberDecimal"
        android:hint="Enter total sum" />

    <EditText
        android:id="@+id/textView_tank_add_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter station" />



    <Button
        android:id="@+id/button_tank_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Save"
        android:textAllCaps="false" />

</LinearLayout>