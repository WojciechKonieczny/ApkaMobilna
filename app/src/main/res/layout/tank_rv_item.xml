<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#FFFFFF"
    app:contentPadding="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_tank_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:padding="8dp"
            android:text="Date"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_tank_mileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="8dp"
            android:text="Car mileage"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView_tank_date"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_tank_liter_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="Cost per liter"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView_tank_mileage"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_tank_cost_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:text="Total cost"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView_tank_mileage"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_tank_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Gas station"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView_tank_cost_sum"
            android:textSize="15sp" />


    </RelativeLayout>




</androidx.cardview.widget.CardView>